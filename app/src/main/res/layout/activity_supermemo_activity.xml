<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".lsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/wordText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:textSize="80px" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECK ANSWER"
        android:id="@+id/answerButton"
        android:layout_marginBottom="92dp"
        android:textSize="50px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="checkAnswer"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Word to spell:"
        android:id="@+id/wordLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/answerText"
        android:layout_marginTop="56dp"
        android:textSize="80px"
        android:layout_below="@+id/wordText"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Answer in Japanese:"
        android:id="@+id/ratingLabel"
        android:textStyle="bold"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/wordText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answerField"
        android:layout_marginBottom="29dp"
        android:inputType="text"
        android:minWidth="500px"
        android:textSize="70px"
        android:textAlignment="center"
        android:focusable="true"
        android:layout_above="@+id/answerButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingButton2"
        android:minWidth="0dp"
        android:maxWidth="50dp"
        android:minHeight="1dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/ratingButton1"
        android:layout_alignBottom="@+id/ratingButton1"
        android:layout_alignStart="@+id/wordLabel" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingButton1"
        android:minWidth="0dp"
        android:maxWidth="50dp"
        android:minHeight="1dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/ratingButton0"
        android:layout_alignBottom="@+id/ratingButton0"
        android:layout_toStartOf="@+id/ratingLabel" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingButton5"
        android:minWidth="0dp"
        android:maxWidth="50dp"
        android:minHeight="1dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/ratingButton4"
        android:layout_alignBottom="@+id/ratingButton4"
        android:layout_toEndOf="@+id/answerField" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingButton4"
        android:minWidth="0dp"
        android:maxWidth="50dp"
        android:minHeight="1dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/ratingButton3"
        android:layout_alignBottom="@+id/ratingButton3"
        android:layout_alignEnd="@+id/answerText" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingButton3"
        android:minWidth="0dp"
        android:maxWidth="50dp"
        android:minHeight="1dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/ratingButton2"
        android:layout_alignBottom="@+id/ratingButton2"
        android:layout_alignEnd="@+id/wordLabel"
        android:layout_marginEnd="19dp" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingButton0"
        android:minWidth="0dp"
        android:maxWidth="50dp"
        android:minHeight="1dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ratingButton1"
        android:layout_toStartOf="@+id/answerText"
        android:layout_marginBottom="12dp"
        android:id="@+id/button3" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:id="@+id/button4" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button5"
        android:layout_alignParentEnd="true"
        android:id="@+id/button6" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignEnd="@+id/ratingLabel" />

</RelativeLayout>
